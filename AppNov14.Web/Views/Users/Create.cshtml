@model AppNov14.Web.ViewModels.Users.UserCreateViewModel

<form asp-action="Create" asp-controller="Users">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="@this.Model.Form.LoginApp" class="control-label">Логин</label>
        <input type="text" asp-for="@this.Model.Form.LoginApp" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@this.Model.Form.FirstName" class="control-label">Имя</label>
        <input type="text" asp-for="@this.Model.Form.FirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@this.Model.Form.LastName" class="control-label">Фамилия</label>
        <input type="text" asp-for="@this.Model.Form.LastName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@this.Model.Form.Password" class="control-label">Пароль</label>
        <input type="password" asp-for="@this.Model.Form.Password" class="form-control" />
    </div>
    <div class="form-row input-btn-group">
        <div class="form-group submit-btn">
            <input type="submit" value="Добавить" class="btn btn-primary-submit">
        </div>
    </div>
</form>