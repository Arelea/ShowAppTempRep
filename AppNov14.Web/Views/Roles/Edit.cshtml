@using Microsoft.AspNetCore.Identity
@model AppNov14.Web.ViewModels.Roles.RoleEditViewModel

<form asp-action="Edit" method="post">
    <input type="hidden" name="userId" value="@this.Model.ChangeRoleModel.UserId" />
    <div class="form-group">
        @foreach (IdentityRole role in this.Model.ChangeRoleModel.AllRoles)
        {
            <input type="checkbox" name="roles" value="@role.Name" @(this.Model.ChangeRoleModel.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") />@role.Name <br />
         }
    </div>
    <div class="form-group submit-btn">
        <input type="submit" value="Сохранить" class="btn btn-primary-submit">
    </div>
</form>
