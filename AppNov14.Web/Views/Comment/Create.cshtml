@model AppNov14.Web.ViewModels.Comment.CommentCreateViewModel

<form asp-action="Create" autocomplete="on">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="@this.Model.Form.Name" class="control-label">Название</label>
            <input asp-for="@this.Model.Form.Name" class="form-control" />
            <span asp-validation-for="@this.Model.Form.Name" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="@this.Model.Form.Type" class="control-label">Тип</label>
            <select asp-for="@this.Model.Form.Type" class="form-control" asp-items="@(new SelectList(this.Model.CommentTypes, "Value", "Text"))"></select>
            <span asp-validation-for="@this.Model.Form.Type" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="@this.Model.Form.Text" class="control-label">Комментарий</label>
            <textarea asp-for="@this.Model.Form.Text" class="form-control" rows="3"></textarea>
            <span asp-validation-for="@this.Model.Form.Text" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row input-btn-group">
        <div class="form-group submit-btn">
            <input type="submit" value="Сохранить" class="btn btn-primary-submit" onclick="return confirm('Создать комментарий?')">
        </div>
    </div>
</form>