@model AppNov14.Web.ViewModels.Warehouse.WarehouseLabViewAllViewModel

<form asp-action="WarehouseViewLab">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-check">
        <input asp-for="@this.Model.Form.Mode" type="checkbox" class="form-check-input" checked="@this.Model.Form.Mode">
        <label asp-for="@this.Model.Form.Mode" class="form-check-label">Подключить основной склад</label>
    </div>
    <hr />
    <div class="form-group submit-btn">
        <input type="submit" value="Применить" class="btn btn-primary-submit">
    </div>
</form>

<div class="table-wrapper">
    @foreach (var type in this.Model.DistinctTypes)
    {
        <div class="jumbotron">
            <h4 class="text-center">@type</h4>
        </div>
        <table align="center" class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>
                        #Id
                    </th>
                    <th>
                        Тип материала
                    </th>
                    <th>
                        Наименование типа материала
                    </th>
                    <th>
                        Поставщик
                    </th>
                    <th>
                        Производитель
                    </th>
                    <th>
                        Остатки
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in this.Model.Items.Where(m => m.Type == type))
                {
                    <tr>
                        <td>
                            @item.Id
                        </td>
                        <td>
                            @item.Type
                        </td>
                        <td>
                            @item.SubType
                        </td>
                        <td>
                            @item.Provider
                        </td>
                        <td>
                            @item.Manufacturer
                        </td>
                        <td>
                            @item.Leftovers
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <hr />
    }
</div>