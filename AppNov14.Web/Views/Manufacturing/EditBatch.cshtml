@model AppNov14.Web.ViewModels.ManufacturingTable.EditBatchViewModel

<form asp-action="EditBatch" autocomplete="on">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-row">
        <input type="hidden" asp-for="@this.Model.Form.Id" />
        <div class="form-group col-md-6">
            <label asp-for="@this.Model.Form.BatchName" class="control-label">Номер партии</label>
            <input asp-for="@this.Model.Form.BatchName" class="form-control" />
            <span asp-validation-for="@this.Model.Form.BatchName" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="@this.Model.Form.BatchTypeId" class="control-label">Тип партии</label>
            <select asp-for="@this.Model.Form.BatchTypeId" class="form-control" asp-items="@(new SelectList(this.Model.BatchTypeList, "Value", "Text"))"></select>
            <span asp-validation-for="@this.Model.Form.BatchTypeId" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="@this.Model.Form.BatchLineId" class="control-label">Линия</label>
            <select asp-for="@this.Model.Form.BatchLineId" class="form-control" asp-items="@(new SelectList(this.Model.BatchLineList, "Value", "Text"))"></select>
            <span asp-validation-for="@this.Model.Form.BatchLineId" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="@this.Model.Form.BatchStatusId" class="control-label">Статус</label>
            <select asp-for="@this.Model.Form.BatchStatusId" class="form-control" asp-items="@(new SelectList(this.Model.BatchStatusList, "Value", "Text"))"></select>
            <span asp-validation-for="@this.Model.Form.BatchStatusId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="@this.Model.Form.CreateDate" class="control-label">Дата</label>
            <input asp-for="@this.Model.Form.CreateDate" type="date" min="2010-01-01" max="2050-12-31" class="form-control" />
            <span asp-validation-for="@this.Model.Form.CreateDate" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row input-btn-group">
        <div class="form-group submit-btn">
            <input type="submit" value="Сохранить" class="btn btn-primary-submit" onclick="return confirm('Вы уверенны, что хотите редактировать запись?')">
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}